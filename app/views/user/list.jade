extends ../layout

block content 
    div.col-sm-2
    div.col-sm-8.top-buffer
        div(class='panel panel-primary')
            div.panel-heading 
                h3.panel-title All Users here.
            div.panel-body
                div.table-responsive
                  each person, i in persons
                    h5 Person followed by accounts
                    table(class='table table-striped top-buffer')
                        tbody                             
                                tr 
                                    th Person ID
                                    th First Name
                                    th Last Name
                                    th Address
                                    th Email
                                    th Phone

                                tr  
                                    td #{person.person_id}
                                    td #{person.first_name}
                                    td #{person.last_name}
                                    td #{person.address}
                                    td #{person.email}
                                    td #{person.phone}

                             each user, n in person.users
                                tr
                                    th User ID
                                    th Password
                                    th Type
                                    th(colspan="3") Date Register
                                
                                tr
                                    td #{user.user_name}
                                    td #{user.password}
                                    td #{user.class}
                                    td #{user.date_registered}
        


extends ../layout

block content 
      each person, i in persons
        div(class='panel panel-primary top-buffer')
            div.panel-heading 
                h3.panel-title #{person.last_name},#{person.first_name}               
            div.panel-body
                div.table-responsive
                  table(class='table')
                    thead                             
                            tr 
                                th Person ID
                                th First Name
                                th Last Name
                                th Address
                                th Email
                                th Phone
                                th Edit

                    tbody
                            tr  
                                td #{person.person_id}
                                td #{person.first_name}
                                td #{person.last_name}
                                td #{person.address}
                                td #{person.email}
                                td #{person.phone}
                                td(width="40") 
                                    a.btn.btn-primary.btn-xs(href="/profile/" + person.person_id) Edit Profile

                 div.table-responsive
                      table(class='table table-striped')
                         thead

                            tr
                                th User ID
                                th Password
                                th Type
                                th(colspan="3") Date Register
                                th Edit

                         tbody
                         each user, i in person.users
                            tr
                                td #{user.user_name}
                                td #{user.password}
                                td #{user.class}
                                td(colspan="3") #{user.date_registered}
                                td(width="40")  
                                    a.btn.btn-primary.btn-xs(href="/user/"+user.user_name) Edit User


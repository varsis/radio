extends ../layout

block content 
    div.col-sm-3
    div.col-sm-6.top-buffer
        div(class='panel panel-primary')
            div.panel-heading 
                h3.panel-title Add a new Radiology report
            div.panel-body
                form(action='/profile',method='post')
                    .form-group
                        label.col-sm-2.control-label(for="testtype") TestType
                        .col-sm-10
                        input#email.form-control(type="username", placeholder="placeholdingtext", name="password") 
                    .form-group
                        .col-sm-offset-2.col-sm-10
                        button.btn.btn-primary(type='submit') Save
